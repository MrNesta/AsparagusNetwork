@using System.Linq;
@model IQueryable<IGrouping<string, AsparagusTest.Models.Food>>

@{
    ViewBag.Title = "List";
}

<h2>Список любителей спаржи</h2>


@foreach (var user in Model)
{
    <ul class="list-group">
        @foreach (var f in user)
        {
            <li class="list-group-item">@user.Key @f.EatingDate.ToLongTimeString()</li>
        }
        <li class="list-group-item">@user.ToArray().Last().EatingDate.ToLongTimeString() @user.Key ел спаржу уже @user.Count()  раз</li>
    </ul>
}
